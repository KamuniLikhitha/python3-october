class Solution:
    def findLexSmallestString(self, s: str, a: int, b: int) -> str:
        seen=set()
        q=deque([s])
        smallest=s
        while q:
            cur=q.popleft()
            if cur in seen:
                continue
            seen.add(cur)
            smallest=min(smallest,cur)
            chars=list(cur)
            for i in range(1,len(chars),2):
                chars[i]=str((int(chars[i])+a)%10)
            added=''.join(chars)
            rotated=cur[-b:]+cur[:-b]
            q.append(added)
            q.append(rotated)
        return smallest
